          "name": "GET Users List (with pagination)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));\r",
                  "\r",
                  "pm.test(\"Response time < 1500ms\", () => {\r",
                  "    pm.expect(pm.response.responseTime).to.be.below(1500);\r",
                  "});\r",
                  "\r",
                  "pm.test(\"Response has correct schema - data is array\", () => {\r",
                  "    var jsonData = pm.response.json();\r",
                  "    pm.expect(jsonData).to.have.property(\"page\").that.is.a(\"number\");\r",
                  "    pm.expect(jsonData).to.have.property(\"per_page\").that.is.a(\"number\");\r",
                  "    pm.expect(jsonData).to.have.property(\"total\").that.is.a(\"number\");\r",
                  "    pm.expect(jsonData.data).to.be.an(\"array\");\r",
                  "});\r",
                  "\r",
                  "pm.test(\"Each user has required fields\", () => {\r",
                  "    var users = pm.response.json().data;\r",
                  "    users.forEach(user => {\r",
                  "        pm.expect(user).to.have.property(\"id\").that.is.a(\"number\");\r",
                  "        pm.expect(user).to.have.property(\"email\").that.is.a(\"string\");\r",
                  "        pm.expect(user).to.have.property(\"first_name\").that.is.a(\"string\");\r",
                  "    });\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
